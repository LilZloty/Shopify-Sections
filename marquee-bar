        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% style %}
.marquee-container {
  width: 100%;
  border: {{ section.settings.border_width }}px solid;
  border-radius: {{ section.settings.border_radius }}px;
  padding: {{ section.settings.padding }}px;
  overflow: hidden;
  text-align: center;
  border-color: {{ section.settings.border_color }}; 
  margin-top: {{ section.settings.margin_top }}px;
  margin-bottom: {{ section.settings.margin_bottom }}px;
}
  
.marquee-bar {
  width: 100%;
  padding: 10px;
  overflow: hidden;
}
  
.marquee {
  display: flex;
  overflow: hidden;
  width: 100%;
  position: relative;
}

.marquee-track {
  display: flex;
  width: 100%;
  will-change: transform;
  {% if section.settings.pause_on_hover %}
  &:hover {
    animation-play-state: paused;
  }
  {% endif %}
  {% if section.settings.double_content %}
  animation: marquee {{ section.settings.scroll_speed }}s linear infinite;
  {% endif %}
}

.marquee-content {
  display: inline-flex;
  flex-shrink: 0;
  min-width: 100%;
  white-space: nowrap;
  {% unless section.settings.double_content %}
  animation: marquee {{ section.settings.scroll_speed }}s linear infinite;
  {% endunless %}
}

.marquee-item {
  {% if section.settings.font_style == 'heading' %}
    font-family: var(--font-heading-family) !important;
    font-weight: {{ settings.heading_scale | times: 100 | default: 400 }};
  {% else %}
    font-family: var(--font-body-family) !important;
    font-weight: {{ settings.body_scale | times: 100 | default: 400 }};
  {% endif %}
  color: {{ section.settings.text_color }};
  {% if section.settings.text_transform != 'none' %}
    text-transform: {{ section.settings.text_transform }};
  {% endif %}
  padding: 0 {{ section.settings.item_spacing }}px;
  {% if section.settings.text_shadow %}
    text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  {% endif %}
  font-size: {{ section.settings.global_font_size }}px;
  display: inline-block;
  flex-shrink: 0;
}

@media screen and (max-width: 768px) {
  .marquee-item {
    font-size: {{ section.settings.mobile_font_size }}px;
    padding: 0 {{ section.settings.item_spacing | divided_by: 2 }}px;
  }
  
  {% if section.settings.double_content %}
  .marquee-track {
    animation-duration: {{ section.settings.mobile_scroll_speed }}s;
  }
  {% else %}
  .marquee-content {
    animation-duration: {{ section.settings.mobile_scroll_speed }}s;
  }
  {% endif %}
}

@keyframes marquee {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-100%);
  }
}
{% endstyle %}

